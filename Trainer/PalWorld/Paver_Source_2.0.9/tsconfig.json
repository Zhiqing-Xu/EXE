{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "dist",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2022",
        "lib": ["es2022"],
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
